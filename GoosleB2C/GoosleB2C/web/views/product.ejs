<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/stylesheets/zTreeStyle.css">
    <link rel='stylesheet' href='/stylesheets/public.css' />
    <link rel="stylesheet" href="/stylesheets/ckeditor.css" />
    <script src="/javascripts/jquery-1.10.1.min.js"></script>
    <script src="/javascripts/jquery.pager.js"></script>
    <script src="/javascripts/jquery.ztree.core.js"></script>
    <script src="/javascripts/ejs.min.js"></script>
    <script src="/javascripts/product.js"></script>
    <!-- <script scripttype="text/javascript" src="http://pv.sohu.com/cityjson?ie=utf-8"></script> -->
    <title>产品展示</title>
</head>
<style>
.sub_mltimg {
  width: 273px;
  height: 134px;
  background: url('/images/sub_lefttop03.png') no-repeat;
}
</style>
<body>
    <%- include('header'); -%>
    <div class="main">
        <div class="banner_aa">
            <img src="/images/cp.jpg" alt="">
        </div>
        <div class="location">
          <div class="search">
            <input type="text" id="searchName" placeholder="请输入您要搜索的产品">
            <span href="" id="search">
              <img src="/images/search.png" alt="">
            </span>
          </div>
          <a href="/">首页</a>
          >
          <a href="">产品展示</a>
        </div>
        <div class="sub_main">
            <div class="sub_mainleft">
                <div class="sub_mltop">
                    <div class="sub_mltimg">
                        <dl>
                            <dt>主要产品</dt>
                        </dl>
                    </div>
                </div>
                <div class="sub_mlm">
                    <div class="sub_tree">
                        <ul id="treeDemo" class="ztree"></ul>
                    </div>
                    <%- include('left'); -%>
                </div>
            </div>
            <div class="sub_mainright">
                <div style="margin: 0 auto;">
                    <ul id="ul">
                        <%rows.forEach(function(item,index){%>
                            <%if(index < rows.length && index < 12){%>
                                <div class="produce">
                                    <div class="produce_img">
                                        <a href="/productDetail/<%- item.JSON_pid %>" target="_blank">
                                            <img src="<%- locals.link+item.JSON_img1%>_200.jpg" alt="">
                                        </a>
                                    </div>
                                    <div class="produce_detail">
                                        <div class="produce_price">
                                            <div class="produce_price_detali">
                                                <span>￥</span>
                                                <strong><%= item.JSON_price %></strong>
                                            </div>
                                        </div>
                                        <div class="produce_title">
                                            <a href="/productDetail/<%- item.JSON_pid %>" target="_blank">
                                                <%= item.JSON_title %>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            <%}%>
                        <%})%>                                          
                    </ul>
                </div>
                <div class="clear"></div>
                <div class="pager"></div>
            </div>
            <div class="clear"></div>
        </div>
    </div>
    <%- include('footer'); -%>
    <script>
        var length ='<%=locals.productLength%>';
        window.link ='<%=locals.link%>';
    </script>
</body>
</html>