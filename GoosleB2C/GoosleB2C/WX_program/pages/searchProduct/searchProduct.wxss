@import "../lib/weui.wxss";

.page-section{
  margin-bottom: 20rpx;
}

#searchbar{
  display: flex;
  flex-direction: row;
}
#clear{
  float:unset;
}
#notfound{
  color: #d6d6d6;
  font-size: 25rpx;
  font-weight: 300;
  margin-left: 300rpx;
  display: inline-block; 
}
.produceList{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.produce{
  width: 325rpx;
  height: 450rpx;
  background-color: #F7F7F7;
  margin: 24rpx;
  border-radius:10rpx;
  overflow: hidden; 
}
.produce_img{
  width: 325rpx;
  height: 325rpx;
  
}
.intro_area{
  width: 100%;
  height: 50rpx;
  overflow:hidden; 
}
.produce_intro{
  margin: 0rpx 10rpx 0rpx 10rpx;
  font-weight: 500;
  font-size: 27rpx;
  overflow-wrap: normal;
}
.price_area{
  margin: 5rpx 0rpx 0rpx 0rpx;
  display: flex;
  flex-direction: row;
  color: red;
}
.dolar{
  font-size: 20rpx;
  margin: 11rpx 5rpx 0rpx 10rpx;
}
.price{
  font-size: 30rpx;
}